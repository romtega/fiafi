<% if current_user %>
<%= link_to 'Nuevo Fiado', new_fiado_path %>
<% end %>

<h1 class="text-center">Fiados</h1>
<div class="jumbotron">
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Telefono</th>
        <th>Email</th>
        <th>Direccion</th>
      </tr>
    </thead>

    <tbody>
      <% @fiados.each do |fiado| %>
      <tr>
        <td><%= link_to fiado.nombre, fiado_path(fiado) %></td>
        <td><%= fiado.telefono %></td>
        <td><%= fiado.email %></td>
        <td><%= fiado.direccion %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>


